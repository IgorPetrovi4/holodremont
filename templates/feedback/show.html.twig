{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
    <h1>Feedback</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ feedback.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ feedback.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ feedback.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ feedback.email }}</td>
            </tr>
            <tr>
                <th>Letter</th>
                <td>{{ feedback.letter }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('feedback_index') }}">back to list</a>

    <a href="{{ path('feedback_edit', {'id': feedback.id}) }}">edit</a>

    {{ include('feedback/_delete_form.html.twig') }}
{% endblock %}
