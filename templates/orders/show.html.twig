{% extends 'admin/index.html.twig'%}

{% block title %}Orders{% endblock %}
{% block heading %}Просмотр {% endblock %}
{% block heading_right %}
    <li> <a class="btn btn-info ml-2" href="{{ path('orders_index') }}" role="button"><i class="fas fa-arrow-circle-left"></i></a></li>
    <li> <a class="btn btn-info ml-2" href="{{ path('orders_edit', {'id': order.id}) }}" role="button"><i class="fas fa-edit"></i></a></li>
    <li> {{ include('orders/_delete_form.html.twig') }} </li>

{% endblock %}
{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ order.service }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order.price }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
