{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="container" style="padding-top: 150px" method="post">
    <div class="row justify-content-center">
        <div class="col-md-4">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <h1 class="h3 mb-3 font-weight-normal">Пожалуйста войдите</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">



        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Запомнить пароль
            </label>

            <a class="text-danger" href="{{ path('app_reset_password', {'token': 'x'}) }}">Востановить пароль</a>

        </div>


    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
        </div>
    </div>
</form>
{% endblock %}
